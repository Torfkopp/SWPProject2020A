<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" fillWidth="false" spacing="15.0"
      xmlns="http://javafx.com/javafx/11.0.1" fx:controller="de.uol.swp.client.ChangePassword.ChangePasswordPresenter">
    <HBox spacing="10.0">
        <VBox alignment="CENTER_LEFT" spacing="10.0">
            <Label maxHeight="25.0" minHeight="25.0" prefHeight="25.0" text="%changepw.labels.oldpw"/>
            <Label maxHeight="25.0" minHeight="25.0" prefHeight="25.0" text="%changepw.labels.newpw"/>
            <Label maxHeight="25.0" minHeight="25.0" prefHeight="25.0" text="%changepw.labels.newpw"/>
        </VBox>
        <VBox alignment="CENTER_RIGHT" spacing="10.0">
            <PasswordField fx:id="OldPasswordField1" promptText="%changepw.prompts.oldpw"/>
            <PasswordField fx:id="NewPasswordField1" promptText="%changepw.prompts.newpw.enter"/>
            <PasswordField fx:id="NewPasswordField2" promptText="%changepw.prompts.newpw.confirm"/>
        </VBox>
    </HBox>

    <HBox alignment="CENTER" spacing="20.0">
        <Button id="ChangePasswordButton" defaultButton="true" mnemonicParsing="false"
                onAction="#onChangePasswordButtonPressed" text="%changepw.buttons.change"/>
        <Button id="CancelChangeButton" alignment="CENTER_RIGHT" mnemonicParsing="false"
                onAction="#onCancelButtonPressed" text="%changepw.buttons.cancel"/>
    </HBox>
</VBox>
