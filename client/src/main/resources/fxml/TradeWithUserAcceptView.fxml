<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1"
      fx:controller="de.uol.swp.client.trade.TradeWithUserAcceptPresenter">
    <Label fx:id="tradeNotPossibleLabel" disable="true" prefWidth="328.0">
        <VBox.margin>
            <Insets left="5.0"/>
        </VBox.margin>
    </Label>
    <Label fx:id="tradeResponseLabel" minHeight="100" prefHeight="108.0" prefWidth="328.0" wrapText="true">
        <VBox.margin>
            <Insets left="5.0"/>
        </VBox.margin>
    </Label>
    <HBox minHeight="150" minWidth="300" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
        <ListView fx:id="ownInventoryView" prefHeight="110" prefWidth="200.0"/>
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="15.0">
            <Button fx:id="acceptTradeButton" minWidth="150" mnemonicParsing="false"
                    onAction="#onAcceptTradeButtonPressed" prefWidth="150" text="%game.trade.offer.buttons.accept"/>
            <Button minWidth="150" mnemonicParsing="false" onAction="#onMakeCounterOfferButtonPressed" prefWidth="150"
                    text="%game.trade.offer.buttons.counteroffer"/>
            <Button minWidth="150" mnemonicParsing="false" onAction="#onRejectTradeButtonPressed" prefWidth="150"
                    text="%game.trade.offer.buttons.reject"/>
        </VBox>
        <padding>
            <Insets top="5.0"/>
        </padding>
        <VBox.margin>
            <Insets left="5.0"/>
        </VBox.margin>
    </HBox>
</VBox>
