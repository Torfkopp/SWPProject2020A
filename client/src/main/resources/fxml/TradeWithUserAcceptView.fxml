<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" spacing="5.0" xmlns="http://javafx.com/javafx/11.0.1"
      fx:id="tradeUserAcceptView" fx:controller="de.uol.swp.client.trade.TradeWithUserAcceptPresenter">
    <Label fx:id="tradeNotPossibleLabel" disable="true" prefWidth="328.0"/>
    <Label fx:id="tradeResponseLabel" minHeight="100" prefHeight="108.0" prefWidth="328.0" wrapText="true"/>
    <Label fx:id="acceptTradeTimerLabel"/>
    <HBox minHeight="150" minWidth="300" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
        <TableView fx:id="ownResourceTableView" prefHeight="150.0" prefWidth="230.0">
            <columns>
                <TableColumn fx:id="resourceAmountCol" editable="false" maxWidth="75.0" minWidth="75.0"
                             prefWidth="75.0" resizable="false" text="%game.inventories.amountcol"/>
                <TableColumn fx:id="resourceNameCol" editable="false" maxWidth="1.7976931348623157E308"
                             minWidth="-Infinity" prefWidth="-1.0" text="%game.inventories.resourcecol"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="15.0">
            <Button fx:id="acceptTradeButton" minWidth="150" mnemonicParsing="false"
                    onAction="#onAcceptTradeButtonPressed" prefWidth="150" text="%game.trade.offer.buttons.accept"/>
            <Button minWidth="150" mnemonicParsing="false" onAction="#onMakeCounterOfferButtonPressed" prefWidth="150"
                    text="%game.trade.offer.buttons.counteroffer"/>
            <Button minWidth="150" mnemonicParsing="false" onAction="#onRejectTradeButtonPressed" prefWidth="150"
                    text="%game.trade.offer.buttons.reject"/>
        </VBox>
    </HBox>
    <padding>
        <Insets topRightBottomLeft="5.0"/>
    </padding>
</VBox>
