<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="400" prefWidth="595.0" xmlns="http://javafx.com/javafx/11.0.1"
      fx:controller="de.uol.swp.client.trade.TradeWithBankPresenter">
    <padding>
        <Insets topRightBottomLeft="20.0"/>
    </padding>
    <HBox alignment="CENTER" VBox.vgrow="NEVER">
        <AnchorPane prefHeight="350" prefWidth="555.0" HBox.hgrow="NEVER" VBox.vgrow="NEVER">
            <Label layoutY="6.0" text="%game.trade.labels.yougive"/>
            <Button fx:id="buyDevelopmentButton" disable="true" layoutX="352.0" layoutY="235.0" mnemonicParsing="false"
                    onAction="#onBuyDevelopmentCardButtonPressed" prefHeight="50"
                    text="%game.trade.buttons.buydevcard"/>
            <Button layoutX="352.0" layoutY="321.0" mnemonicParsing="false" onAction="#onCancelButtonPressed"
                    prefHeight="25.0" text="%button.cancel"/>
            <VBox alignment="CENTER" layoutX="229.0" layoutY="30.0" prefHeight="145.0" prefWidth="125.0">
                <Button fx:id="tradeResourceWithBankButton" mnemonicParsing="false"
                        onAction="#onTradeResourceWithBankButtonPressed" text="%game.trade.buttons.tradefor"/>
                <padding>
                    <Insets left="10.0" right="10.0"/>
                </padding>
            </VBox>
            <Label layoutX="352.0" layoutY="6.0" text="%game.trade.labels.youget"/>
            <Label layoutY="189.0" text="%game.trade.labels.owninventory"/>
            <TableView fx:id="ownResourcesToTradeWith" layoutY="30.0" prefHeight="150.0" prefWidth="230.0">
                <placeholder>
                    <Label text="%game.trade.lists.insufficientplayerresources"/>
                </placeholder>
                <columns>
                    <TableColumn fx:id="tradeResourceAmountCol" editable="false" maxWidth="75.0" minWidth="75.0"
                                 prefWidth="75.0" resizable="false" text="%game.inventories.amountcol"/>
                    <TableColumn fx:id="tradeResourceNameCol" editable="false" maxWidth="1.7976931348623157E308"
                                 minWidth="-Infinity" prefWidth="-1.0" text="%game.inventories.resourcecol"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
            <TableView fx:id="ownResourceTableView" layoutY="210.0" prefHeight="150.0" prefWidth="230.0">
                <columns>
                    <TableColumn fx:id="resourceAmountCol" editable="false" maxWidth="75.0" minWidth="75.0"
                                 prefWidth="75.0" resizable="false" text="%game.inventories.amountcol"/>
                    <TableColumn fx:id="resourceNameCol" editable="false" maxWidth="1.7976931348623157E308"
                                 minWidth="-Infinity" prefWidth="-1.0" text="%game.inventories.resourcecol"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
            <TableView fx:id="bankResourcesView" layoutX="352.0" layoutY="30.0" prefHeight="150.0" prefWidth="230.0">
                <columns>
                    <TableColumn fx:id="bankResourceAmountCol" editable="false" maxWidth="75.0" minWidth="75.0"
                                 prefWidth="75.0" resizable="false" text="%game.inventories.amountcol"/>
                    <TableColumn fx:id="bankResourceNameCol" editable="false" maxWidth="1.7976931348623157E308"
                                 minWidth="-Infinity" prefWidth="-1.0" text="%game.inventories.resourcecol"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </AnchorPane>
    </HBox>
</VBox>
