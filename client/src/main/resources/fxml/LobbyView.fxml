<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/11.0.1" fx:controller="de.uol.swp.client.lobby.LobbyPresenter">
    <GridPane layoutX="-5.0" layoutY="-4.0" prefHeight="410.0" prefWidth="600.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <ListView fx:id="membersView" prefHeight="200.0" prefWidth="200.0"/>

        <VBox prefHeight="372.0" prefWidth="169.0" GridPane.columnIndex="1" GridPane.columnSpan="2147483647">
            <ListView fx:id="chatView" prefHeight="154.0" prefWidth="362.0">
                <VBox.margin>
                    <Insets bottom="10.0" top="10.0"/>
                </VBox.margin>
            </ListView>
            <TextField fx:id="messageField" prefColumnCount="1" prefHeight="25.0" prefWidth="150.0"/>
            <Button mnemonicParsing="false" onAction="#onSendMessageButtonPressed" prefWidth="150.0"
                    text="Send Message">
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#onDeleteMessageButtonPressed" prefWidth="150.0"
                    text="Delete Message">
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
            </Button>
        <Button mnemonicParsing="false" onAction="#onEditMessageButtonPressed" prefWidth="150.0"
                text="Edit Message">
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
            </Button>
        </VBox>

        <Button mnemonicParsing="false" onAction="#onLeaveLobby" text="LeaveLobby" GridPane.columnIndex="2"/>

    </GridPane>
</AnchorPane>
