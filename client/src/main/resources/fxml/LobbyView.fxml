<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="de.uol.swp.client.lobby.LobbyPresenter">
    <columnConstraints>
        <ColumnConstraints hgrow="NEVER" maxWidth="400.0" minWidth="400.0" prefWidth="400.0"/>
        <ColumnConstraints hgrow="SOMETIMES"/>
        <ColumnConstraints hgrow="NEVER" maxWidth="250.0" minWidth="250.0" prefWidth="250.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="100.0" vgrow="ALWAYS"/>
    </rowConstraints>
    <VBox maxWidth="400.0" spacing="10.0" GridPane.vgrow="ALWAYS">
        <VBox maxWidth="-Infinity" minWidth="-Infinity" prefWidth="380.0" spacing="5.0" VBox.vgrow="ALWAYS">
            <ListView fx:id="membersView" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="95.0"/>
            <ListView fx:id="uniqueCardView" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="0.0"
                      visible="false"/>
            <ListView fx:id="chatView" maxHeight="Infinity" VBox.vgrow="ALWAYS"/>
            <TextField fx:id="messageField" onAction="#onSendMessageButtonPressed">
                <VBox.margin>
                    <Insets top="-5.0"/>
                </VBox.margin>
            </TextField>
            <Button mnemonicParsing="false" onAction="#onSendMessageButtonPressed" prefWidth="150.0"
                    text="%chat.buttons.sendmessage"/>
            <Button mnemonicParsing="false" onAction="#onDeleteMessageButtonPressed" prefWidth="150.0"
                    text="%chat.buttons.deletemessage"/>
            <Button mnemonicParsing="false" onAction="#onEditMessageButtonPressed" prefWidth="150.0"
                    text="%chat.buttons.editmessage"/>
        </VBox>
        <VBox spacing="5.0">
            <Button fx:id="kickUserButton" mnemonicParsing="false" onAction="#onKickUserButtonPressed" prefWidth="150.0"
                    text="%lobby.buttons.kickuser" visible="false"/>
            <Button mnemonicParsing="false" onAction="#onLeaveLobbyButtonPressed" prefWidth="150.0"
                    text="%lobby.buttons.leavelobby"/>
        </VBox>
        <padding>
            <Insets topRightBottomLeft="10.0"/>
        </padding>
    </VBox>
    <VBox alignment="TOP_CENTER" spacing="10" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
        <Button fx:id="returnToLobby" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                minWidth="-Infinity" onAction="#onReturnToLobbyButtonPressed" prefHeight="0" prefWidth="0"
                text="%game.won.button.returnPreLobby" visible="false"/>
        <Canvas fx:id="gameMapCanvas" onMouseClicked="#onMouseClickedOnCanvas"/>
        <padding>
            <Insets topRightBottomLeft="10.0"/>
        </padding>
    </VBox>
    <VBox prefWidth="250.0" spacing="10.0" GridPane.columnIndex="2">
        <VBox fx:id="preGameSettingBox" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="190" spacing="10.0">
            <Label fx:id="moveTimeLabel" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="25.0"/>
            <HBox spacing="5.0">
                <TextField fx:id="moveTimeTextField" prefHeight="25.0" prefWidth="80.0"/>
                <Button fx:id="changeMoveTimeButton" mnemonicParsing="false" onAction="#prepareLobbyUpdate"
                        text="%lobby.buttons.changemovetime"/>
                <VBox.margin>
                    <Insets top="-10.0"/>
                </VBox.margin>
            </HBox>
            <CheckBox fx:id="setStartUpPhaseCheckBox" maxHeight="-Infinity" minHeight="-Infinity"
                      mnemonicParsing="false" onAction="#prepareLobbyUpdate" prefHeight="25.0"
                      text="%lobby.checkboxes.startupphase"/>
            <CheckBox fx:id="commandsActivated" maxHeight="-Infinity" minHeight="-Infinity" mnemonicParsing="false"
                      onAction="#prepareLobbyUpdate" prefHeight="25.0"
                      text="%lobby.checkboxes.commandsallowed"/>
            <CheckBox fx:id="randomPlayFieldCheckbox" maxHeight="-Infinity" minHeight="-Infinity"
                      mnemonicParsing="false" onAction="#prepareLobbyUpdate" prefHeight="25.0"
                      text="%lobby.checkboxes.randomplayfield"/>
            <HBox spacing="5.0">
                <RadioButton fx:id="threePlayerRadioButton" maxHeight="-Infinity" minHeight="-Infinity"
                             mnemonicParsing="false" onAction="#prepareLobbyUpdate" prefHeight="25.0"
                             text="%lobby.radio.threeplayers">
                    <toggleGroup>
                        <ToggleGroup fx:id="maxPlayersToggleGroup"/>
                    </toggleGroup>
                </RadioButton>
                <RadioButton fx:id="fourPlayerRadioButton" maxHeight="-Infinity" minHeight="-Infinity"
                             mnemonicParsing="false" onAction="#prepareLobbyUpdate" prefHeight="25.0"
                             selected="true" text="%lobby.radio.fourplayers">
                    <toggleGroup>
                        <fx:reference source="maxPlayersToggleGroup"/>
                    </toggleGroup>
                </RadioButton>
            </HBox>
        </VBox>
        <ListView fx:id="inventoryView" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                  minWidth="-Infinity" prefHeight="0.0" prefWidth="230.0" visible="false"/>
        <HBox maxHeight="25.0" maxWidth="-Infinity" minHeight="25.0" minWidth="-Infinity" prefWidth="230.0"
              spacing="10.0">
            <CheckBox fx:id="readyCheckBox" maxWidth="-Infinity" minHeight="25.0" minWidth="-Infinity"
                      mnemonicParsing="false" onAction="#onReadyCheckBoxClicked" prefWidth="100.0"
                      text="%lobby.game.readycheckbox"/>
            <Button fx:id="startSession" disable="true" maxWidth="-Infinity" minWidth="-Infinity"
                    mnemonicParsing="false" onAction="#onStartSessionButtonPressed" prefWidth="120.0"
                    text="%lobby.game.buttons.startsession"/>
        </HBox>
        <Label fx:id="turnIndicator" maxHeight="30.0" maxWidth="-Infinity" minHeight="30.0" minWidth="-Infinity"
               prefWidth="230.0" wrapText="true">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <Button fx:id="rollDice" disable="true" mnemonicParsing="false" onAction="#onRollDiceButtonPressed"
                prefHeight="30.0" prefWidth="230.0" text="%lobby.game.buttons.rolldice" visible="false"/>
        <Button fx:id="endTurn" disable="true" mnemonicParsing="false" onAction="#onEndTurnButtonPressed"
                prefHeight="30.0" prefWidth="230.0" text="%lobby.game.buttons.endturn" visible="false"/>
        <Button fx:id="tradeWithUserButton" disable="true" mnemonicParsing="false"
                onAction="#onTradeWithUserButtonPressed" prefHeight="30.0" prefWidth="230.0"
                text="%lobby.game.buttons.playertrade" visible="false"/>
        <Button fx:id="tradeWithBankButton" disable="true" mnemonicParsing="false"
                onAction="#onTradeWithBankButtonPressed" prefHeight="30.0" prefWidth="230.0"
                text="%lobby.game.buttons.banktrade" visible="false"/>
        <Button fx:id="playCard" disable="true" mnemonicParsing="false" onAction="#onPlayCardButtonPressed"
                prefHeight="30.0" prefWidth="230.0" text="%game.playcards.button" visible="false"/>
        <padding>
            <Insets topRightBottomLeft="10.0"/>
        </padding>
    </VBox>
</GridPane>
