<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" fillWidth="false" spacing="15.0"
      xmlns="http://javafx.com/javafx/11.0.1"
      fx:controller="de.uol.swp.client.ChangeAccountDetails.ChangeAccountDetailsPresenter">
    <HBox onKeyPressed="#onAltF4Pressed" spacing="10.0">
        <VBox alignment="CENTER_LEFT" spacing="10.0">
            <Label maxHeight="-Infinity" minHeight="-Infinity" prefHeight="25.0" text="%changeaccdetails.labels.oldpw"/>
            <Label maxHeight="-Infinity" minHeight="-Infinity" prefHeight="25.0"
                   text="%changeaccdetails.labels.newusername"/>
            <Label maxHeight="-Infinity" minHeight="-Infinity" prefHeight="25.0"
                   text="%changeaccdetails.labels.newemail"/>
            <Label maxHeight="-Infinity" minHeight="-Infinity" prefHeight="25.0" text="%changeaccdetails.labels.newpw"/>
        </VBox>
        <VBox alignment="CENTER_RIGHT" spacing="10.0">
            <PasswordField fx:id="ConfirmPasswordField" promptText="%changeaccdetails.prompts.confirmpw"/>
            <TextField fx:id="NewUsernameField" promptText="%changeaccdetails.prompts.newusername"/>
            <TextField fx:id="NewEMailField" promptText="%changeaccdetails.prompts.newemail"/>
            <PasswordField fx:id="NewPasswordField" promptText="%changeaccdetails.prompts.newpw"/>
        </VBox>
    </HBox>

    <HBox alignment="CENTER" spacing="20.0">
        <Button defaultButton="true" mnemonicParsing="false" onAction="#onChangeAccountDetailsButtonPressed"
                text="%changeaccdetails.button.change"/>
        <Button mnemonicParsing="false" onAction="#onCancelButtonPressed" text="%button.cancel"/>
    </HBox>
</VBox>
