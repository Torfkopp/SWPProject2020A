<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" fillWidth="false" spacing="15.0"
      xmlns="http://javafx.com/javafx/11.0.1" fx:id="changePropertiesView"
      fx:controller="de.uol.swp.client.changeProperties.ChangePropertiesPresenter">
    <HBox spacing="10.0">
        <VBox alignment="CENTER_LEFT" spacing="10.0">
            <Label mnemonicParsing="true" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="25.0"
                   text="%changeproperties.labels.theme">
                <labelFor>
                    <ComboBox fx:id="themeBox" promptText="%changeproperties.combobox.theme"/>
                </labelFor>
            </Label>
            <Label mnemonicParsing="true" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="25.0"
                   text="%changeproperties.labels.language">
                <labelFor>
                    <ComboBox fx:id="languageBox" promptText="%changeproperties.combobox.language"/>
                </labelFor>
            </Label>

        </VBox>
        <VBox alignment="CENTER_RIGHT" spacing="10.0">
            <fx:reference source="themeBox"/>
            <fx:reference source="languageBox"/>
        </VBox>
    </HBox>
    <HBox alignment="CENTER" spacing="20.0">
        <Button fx:id="changeButton" defaultButton="true" mnemonicParsing="false"
                onAction="#onChangePropertiesButtonPressed"
                text="%changeproperties.button.change"/>
        <Button mnemonicParsing="false" onAction="#onCancelButtonPressed" text="%button.cancel"/>
    </HBox>
</VBox>
