<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<HBox fx:id="mainMenuView" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="550.0" prefWidth="820.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="de.uol.swp.client.main.MainMenuPresenter">
    <GridPane vgap="10.0" HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints percentWidth="17.5"/>
            <ColumnConstraints hgrow="NEVER" percentWidth="2.5"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="120.0" percentWidth="12.5"/>
            <ColumnConstraints hgrow="NEVER" percentWidth="2.5"/>
            <ColumnConstraints percentWidth="20.0"/>
            <ColumnConstraints hgrow="NEVER" percentWidth="11.0"/>
            <ColumnConstraints percentWidth="12.75"/>
            <ColumnConstraints percentWidth="21.25"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="50.0" minHeight="25.0" vgrow="NEVER"/>
            <RowConstraints vgrow="ALWAYS"/>
        </rowConstraints>
        <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="4" GridPane.rowIndex="1">
            <TextField fx:id="lobbyFilterTextField"/>
            <ListView fx:id="lobbyView" VBox.vgrow="ALWAYS"/>
        </VBox>

        <ListView fx:id="usersView" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS"/>

        <VBox spacing="15.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
            <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#onCreateLobbyButtonPressed" prefHeight="45.0"
                    prefWidth="99.0" text="%mainmenu.buttons.lobby.create" textAlignment="CENTER" wrapText="true"/>

            <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#onJoinLobbyButtonPressed" prefHeight="45.0"
                    prefWidth="99.0" text="%mainmenu.buttons.lobby.join" textAlignment="CENTER" wrapText="true"/>
            <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#onJoinRandomLobbyButtonPressed"
                    prefHeight="45.0" prefWidth="99.0" text="%mainmenu.buttons.lobby.joinRandom" textAlignment="CENTER"
                    wrapText="true"/>
            <Label fx:id="randomLobbyState" text="%mainmenu.labels.lobby.randomLobbyState" visible="false"
                   wrapText="true"/>
        </VBox>

        <VBox spacing="10.0" GridPane.columnIndex="6" GridPane.columnSpan="2147483647" GridPane.rowIndex="1">
            <ListView fx:id="chatView" GridPane.columnSpan="2" VBox.vgrow="ALWAYS"/>
            <TextField fx:id="messageField" onAction="#onSendMessageButtonPressed" prefHeight="25.0"/>
            <Button mnemonicParsing="false" onAction="#onSendMessageButtonPressed" prefWidth="150.0"
                    text="%chat.buttons.sendmessage"/>
            <Button mnemonicParsing="false" onAction="#onDeleteMessageButtonPressed" prefWidth="150.0"
                    text="%chat.buttons.deletemessage"/>
            <Button mnemonicParsing="false" onAction="#onEditMessageButtonPressed" prefWidth="150.0"
                    text="%chat.buttons.editmessage"/>
        </VBox>

        <MenuBar prefHeight="25.0" GridPane.columnSpan="2147483647">
            <Menu mnemonicParsing="false" text="%mainmenu.settings">
                <MenuItem mnemonicParsing="false" onAction="#onChangeAccountDetailsButtonPressed"
                          text="%mainmenu.settings.buttons.changeaccdetails"/>
                <MenuItem mnemonicParsing="false" onAction="#onDeleteButtonPressed"
                          text="%mainmenu.settings.buttons.deleteuser"/>
                <MenuItem mnemonicParsing="false" onAction="#onLogoutButtonPressed"
                          text="%mainmenu.settings.buttons.logout"/>
            </Menu>
            <Menu mnemonicParsing="false" text="%lobby.menu.rules">
                <MenuItem mnemonicParsing="false" onAction="#onRulesMenuClicked" text="%lobby.menu.rules.overview"/>
            </Menu>
            <GridPane.margin>
                <Insets left="-15.0" right="-15.0"/>
            </GridPane.margin>
        </MenuBar>
        <VBox GridPane.columnIndex="5" GridPane.rowIndex="1" spacing="5.0">
            <CheckBox fx:id="lobbyListFilteredProtectedBox" mnemonicParsing="false"
                      text="%lobbylist.filtered.protected" wrapText="true"/>
            <CheckBox fx:id="lobbyListFilteredInGameBox" mnemonicParsing="false"
                      text="%lobbylist.filtered.ingame" wrapText="true"/>
            <CheckBox fx:id="lobbyListFilteredFullBox" mnemonicParsing="false"
                      text="%lobbylist.filtered.full" wrapText="true"/>
            <padding>
                <Insets left="5.0"/>
            </padding>
        </VBox>
    </GridPane>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0"/>
    </padding>
</HBox>
